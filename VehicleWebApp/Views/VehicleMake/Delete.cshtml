@model VehicleWebAppService.Models.VehicleMake
@{ 
    ViewData["Title"] = "Vehicle make delete";
}

<h3>Vehicle make delete</h3>
<a asp-controller="VehicleMake" asp-action="Index">
    <i class="fas fa-long-arrow-alt-left"></i> Back to list
</a>

<div class="row">
    <div class="col-md-4">
        <p>Id: <b>@Model.VehicleMakeId</b></p>
        <p>Name: <b>@Model.Name</b></p>
        <p>Abrv: <b>@Model.Abrv</b></p>
        
        <p>Models:</p>
        @if (@Model.VehicleModels.Count == 0)
       {
            <p class="text-center"><i>There are currently no registrated models for this vehicle make.</i></p>
        } else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Abrv</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model.VehicleModels)
                   {
                        <tr>
                            <td>@item.VehicleModelId</td>
                            <td>@item.Name</td>
                            <td>@item.Abrv</td>
                            <td>
                                <a asp-controller="VehicleModel" action="Details" asp-route-id="@item.VehicleModelId">Details</a>
                            </td>
                        </tr>
                   }     
                </tbody>
            </table>
        }
    </div>
</div>

<form method="post" asp-controller="VehicleMake" asp-action="Delete">
    <input type="submit" class="btn btn-danger" asp-constroller="Vehi<cleMake" asp-action="Delete" 
    value="Delete"/><br />
    <small><i>Note: with vehicle make also will be deleted their vehicle models if they exist.</i></small>
</form>