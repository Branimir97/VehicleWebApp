@model VehicleWebApp.ViewModels.VehicleModelViewModel
@{ 
    ViewData["Title"] = "Vehicle model delete";
}

<h3>Vehicle model delete</h3>
<a asp-controller="VehicleModel" asp-action="Index">
    <i class="fas fa-long-arrow-alt-left"></i> Back to list
</a>

<h6 class="text-danger">Are you sure that you want to delete this vehicle model?</h6>

<div class="row">
    <div class="col-md-4">
        <p>Id: <b>@Model.VehicleModel.VehicleModelId</b></p>
        <p>Name: <b>@Model.VehicleModel.Name</b></p>
        <p>Abrv: <b>@Model.VehicleModel.Abrv</b></p>
        <p>Vehicle make:</p>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Abrv</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.VehicleModel.VehicleMake.VehicleMakeId</td>
                    <td>@Model.VehicleModel.VehicleMake.Name</td>
                    <td>@Model.VehicleModel.VehicleMake.Abrv</td>
                    <td>
                        <a asp-controller="VehicleMake" 
                           asp-action="Details" 
                           asp-route-id="@Model.VehicleModel.VehicleMake.VehicleMakeId">
                           Details
                       </a>
                    </td>
                </tr>         
            </tbody>
        </table>
    </div>
</div>

<form method="post" asp-controller="VehicleModel" asp-action="Delete">
    <input type="submit" class="btn btn-danger" value="Delete"/>
</form>